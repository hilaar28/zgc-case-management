{
  "name": "zgc-case-management",
  "version": "1.0.0",
  "description": "A case management system for the Zimbabwe Gender Commission",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "package": "electron-packager . --platform=${PLATFORM=all} --arch=${ARCH:=all} --out=build --asar --overwrite",
    "package-win": "PLATFORM=win32 npm run package",
    "package-mac": "PLATFORM=darwin npm run package",
    "package-linux": "PLATFORM=linux npm run package",
    "package-zgc": "npx electron-packager . --out=build --asar --overwrite && node winstaller"
  },
  "keywords": [],
  "author": "Qurious Consulting, Xavisoft Digital",
  "license": "ISC",
  "devDependencies": {
    "electron": "^25.3.2",
    "electron-packager": "^17.1.1",
    "electron-winstaller": "^5.1.0",
    "glob": "^10.3.3"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  }
}
